<%= form_for(@task) do |t| %>
  <div class="form-group">
    <%= t.label :name, "Name:", class: "control-label" %>
    <%= t.text_field :name, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= t.label :description, "Description:", class: "control-label" %>
    <%= t.text_field :description, class: "form-control"  %>
  </div>

  <%= t.submit "Submit", class: "btn btn-default btn-primary" %>
<% end %>
