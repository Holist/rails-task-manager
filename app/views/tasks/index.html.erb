<h1>Tasks Index</h1>

<div class="wrapper">
  <% @tasks.each do |task| %>
  <div class="task-name">
    <h2><%= task.name %></h2>
    <div class="task-links">
      <%= link_to "Show", task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete %>
    </div>
  </div>
  <% end %>

  <div class="btn btn-default btn-new-task">
    <%= link_to "New task", new_task_path %>
  </div>
</div>


